# SMTP Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your@example.com
SMTP_PASSWORD=yourpassword
RECIPIENT_EMAIL=your@example.com

# CORS Configuration (Multiple Domains - Comma Separated)
CORS_ALLOW_ORIGINS=http://localhost:1313,https://yourdomain.com,https://www.yourdomain.com

# Security (optional - generates random if not set)
TOKEN_SECRET=your-32-character-secret-key-here

# Port Configuration (optional)
HOST_PORT=8080

# Spam Logging and Reporting (optional)
SPAM_LOG_ENABLED=false
SPAM_LOG_DIR=/var/log/hugo-contact
SPAM_LOG_MAX_SIZE_MB=10
SPAM_LOG_RETENTION_DAYS=10
SPAM_REPORT_ENABLED=false
SPAM_REPORT_RECIPIENT=your@example.com